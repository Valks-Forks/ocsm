foregroundColor = #A9ABB0
backgroundColor = #272B32
bodyBackgroundColor = #171C27
borderRadius = 10px

absolute(x, y)
	position absolute
	top x
	left y

flex(dir)
	display flex
	flex-direction dir

flexGrow()
	flex-grow 1
	flex-shrink 0

flexGrowX(x)
	flex-grow x
	flex-shrink 0

flexNone()
	flex-grow 0
	flex-shrink 0

flexShrink()
	flex-grow 0
	flex-shrink 1

flexWrap()
	flex-wrap wrap

invisible()
	opacity 0
	visibility hidden

body
	color foregroundColor
	background-color bodyBackgroundColor
	margin 0
	font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	user-select none

input, textarea, button, select, option
	border 0 none
	color foregroundColor
	background-color backgroundColor

button
	cursor pointer
	padding 5px
	border-radius borderRadius

hr
	border-color foregroundColor

.column
	flex(column)

.row
	flex(row)

.app
	text-align center

.fileSelector
	absolute(0, 0)
	background-color backgroundColor
	height 100vh
	width 100vw
	z-index 100
	
	&.hidden
		invisible()

