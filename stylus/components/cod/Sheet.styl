.sheet.cod
	margin-left 5%
	margin-right 5%
	
	& > h1, & > h2
		margin 0
	
	& hr
		width: 90vw
		margin 10px auto
	
	& .removePopUpOverlay
		fixed(0, 0)
		background-color backgroundColor
		height 100vh
		justify-content center !important
		opacity 0.75
		width 100vw
		z-index 10000
	
	& .removePopUpWrapper
		fixed(0, 0)
		height 100vh
		justify-content center !important
		width 100vw
		z-index 10000
	
		& .removePopUp
			flexNone()
			background-color bodyBackgroundColor
			border 1px solid menuBorderColor
			border-radius borderRadius
			margin 0 auto
			justify-content center !important
			padding 50px
			
			& .row
				margin 10px 0
				
				& button
					flexGrow()
					margin 0 10px
					padding 5px 0
					
					&:hover
						color menuHoverColor
						font-weight bold
	
	& .baseTraits
		min-width 550px
	
	& .column
		flexGrow()
		justify-content space-evenly
		
		&.spacedOut > *
			margin 10px 0
			
			&:first-child
				margin-top 0
			
			&:last-child
				margin-bottom 0
		
		& hr
			margin 10px 0
	
	& .row
		flexNone()
		justify-content space-evenly
		
		&.fill > *
			flexGrow()
	
	& > div.row
		max-width: 90%;
	
	& .advantages
		justify-content left
		
		& .trackers
			flexGrow()