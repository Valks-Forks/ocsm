.cod .attributesWrapper

	& .attributesLabel
		text-align center
		font-size 1.1em
		font-weight bold
		margin-bottom 5px

	& .attributes
		justify-content space-evenly
		
		& > .column
			flexNone()
			
			& .tracker .label
				flexGrow()
				text-align left
				margin 0 10px 0 0
				user-select none
		
		& .dots
			justify-content center
			
			&.extended
				padding-top 5px
			
			& .checker
				flexNone()
				margin 0 2px
			
			& .checkerLine
				margin-top 6px
			
			&.extended .checkerLine
				margin-top 0
