.sheet 
	& .entryListLabel
		justify-content center
		text-align center
		font-size 1.1em
		font-weight bold

	& .entryList

		& .entry
			flexNone()
			margin 5px 5px 0 15px

		& .newEntryButton
			flexShrink()
			margin 7px auto 0
			padding 5px 20px

.sheet.cod .simpleEntryListWrapper
	justify-content flex-start
	
	& .simpleEntryListLabel
		text-align center
		font-size 1.1em
		font-weight bold
		
	& .simpleEntryList.column
		flexNone()
		justify-content space-evenly
		
		& .row
			margin-bottom 5px
			
			& input
				flexGrow()
			
		& .row:first-child
			margin-top 5px
			
		& .row:last-child
			margin-bottom 0