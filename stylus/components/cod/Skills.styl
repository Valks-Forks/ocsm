.cod .skillsWrapper

	& .skillsLabel
		text-align center
		font-size 1.1em
		font-weight bold

	& .skills
		justify-content space-evenly
		
		& .column
			flexNone()
			
			& .tracker .label
				flexGrow()
				text-align left
				margin 0 10px 0 0
		
		& .dots
			justify-content center
			
			& .checker
				flexNone()
				margin 0 2px
			
			& .checkerLine
				margin-top 6px
			
			&.extended
				padding-top 5px
				
				& .checkerLine
					margin-top 0

.cod .skillSpecialtiesWrapper
	
	& .skillSpecialtiesLabel
		text-align center
		font-size 1.1em
		font-weight bold
	
	& .skillSpecialties
		justify-content space-evenly
		
		& .column
			flexNone()
			
			& .tracker .label
				flexGrow()
				text-align left
				margin 0 10px 0 0