.sheet.cod .skillsWrapper

	& .skillsLabel
		text-align center
		font-size 1.1em
		font-weight bold

	& .skills
		
		& .column
			flexNone()
			
			& .tracker .label
				flexGrow()
				text-align left
				margin 0 10px 0 0
		
		& .traitCategory
			text-align center
			font-size 0.8em
			font-weight bold
			
			& .row
				flexGrow()
			
		& .unskilled
			color menuBorderColor
			text-align center
			font-size 0.7em
			font-weight bold
		
		& .dots
			justify-content center
			
			& .checker
				flexNone()
				margin 0 2px
			
			& .checkerLine
				margin-top 6px
			
			&.extended
				padding-top 5px
				
				& .checkerLine
					margin-top 0
