{
  "build": {
    "distDir": "../frontend/build",
    "devPath": "http://localhost:3000",
    "beforeDevCommand": "",
    "beforeBuildCommand": "npm run buildReact",
	"withGlobalTauri": false
  },
  "tauri": {
	"allowlist": {
		"all": true
	},
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "org.bitbucket.nemesisx00.ocsm",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "Copyright (c) Peter Lunneberg 2021",
      "category": "Entertainment",
      "shortDescription": "An open source application for managing table top roleplaying game character sheets.",
      "longDescription": "",
      "deb": {
        "depends": [],
        "useBootstrapper": false
      },
      "macOS": {
		"entitlements": null,
		"exceptionDomain": "",
        "frameworks": [],
        "minimumSystemVersion": "",
		"signingIdentity": null,
        "useBootstrapper": false
      },
	  "windows": {
		  "certificateThumbprint": null,
		  "digestAlgorithm": "sha256",
		  "timestampUrl": ""
	  }
    },
	"updater": {
		"active": false,
		"dialog": true
	},
    "windows": [
		{
	      "title": "Open Character Sheet Manager",
	      "width": 1024,
	      "height": 768,
	      "resizable": true,
	      "fullscreen": false
	    }
	],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self'"
    }
  }
}